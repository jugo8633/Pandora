<LinearLayout android:id="@+id/llWidgetLayout" 
xmlns:android="http://schemas.android.com/apk/res/android" 
android:orientation="horizontal" 
android:layout_height="wrap_content" 
android:layout_width="wrap_content">

<!-- widget default layout -->
<LinearLayout android:id="@+id/llWidgetDefaultLayout" 
android:orientation="vertical" 
android:layout_gravity="center" 
android:layout_height="wrap_content" android:layout_width="wrap_content" android:visibility="gone">

<ImageView android:id="@+id/ivWidgetAlbumArt" 
android:src="@drawable/pandoraicon" 
android:layout_gravity="center_horizontal" 
android:scaleType="fitXY" android:layout_height="wrap_content" android:layout_width="wrap_content">
</ImageView>

<ImageView android:id="@+id/ivWidgetLogo" 
android:layout_height="wrap_content" 
android:src="@drawable/pandora_station_logo" 
android:layout_gravity="center_horizontal" 
android:layout_marginTop="10dip" 
android:scaleType="fitXY" android:layout_width="90dip">
</ImageView>

</LinearLayout>


<!-- widget playnow layout -->
<LinearLayout android:id="@+id/llWidgetPlayNowLayout" 
android:orientation="horizontal" 
android:layout_gravity="center" 
android:layout_height="wrap_content" android:layout_width="wrap_content">

<ImageView android:id="@+id/ivWidgetPlayNowLogo" 
android:src="@drawable/icon_pandora" 
android:layout_marginLeft="5dip" 
android:layout_height="30dip" 
android:layout_width="30dip" 
android:scaleType="fitXY" android:layout_marginTop="20dip" android:visibility="gone">
</ImageView>

<LinearLayout android:layout_width="wrap_content" 
android:id="@+id/llWidgetPlayNowTrack" 
android:orientation="vertical" 
android:layout_gravity="center_horizontal" 
android:layout_height="wrap_content">

<TextView 
android:id="@+id/tvWidgetPlayNowStationName" 
android:textColor="@color/White" 
android:textColorHighlight="@color/White" 
android:text="@string/pandora" 
android:singleLine="true" android:layout_width="90dp" android:textSize="14sp" android:layout_height="30dp" android:gravity="center_vertical" android:layout_marginLeft="5dp"/>

<ImageView android:src="@drawable/pandoraicon" 
android:id="@+id/ivWidgetPlayNowAlbumArt" 
android:scaleType="fitXY" 
android:layout_height="wrap_content" android:layout_width="wrap_content">
</ImageView>

<TextView 
android:layout_height="wrap_content" 
android:textSize="14sp" 
android:id="@+id/tvWidgetPlayNowArtist" 
android:text="@string/pandora" 
android:layout_marginTop="2dip" 
android:singleLine="true" android:textColor="@color/Gray_White" android:textColorHighlight="@color/Gray_White" android:layout_width="90dp"/>

<TextView 
android:layout_height="wrap_content" 
android:id="@+id/tvWidgetPlayNowSongName" 
android:textColor="@color/White" 
android:textColorHighlight="@color/White" 
android:text="@string/pandora" 
android:singleLine="true" android:layout_width="90dp" android:textSize="16sp"/>

<TextView 
android:layout_height="wrap_content" 
android:id="@+id/tvWidgetPlayNowAlbumName" 
android:textSize="14sp" 
android:text="@string/pandora" 
android:singleLine="true" android:textColorHighlight="@color/Gray_White" android:textColor="@color/Gray_White" android:layout_width="90dp"/>

</LinearLayout>

</LinearLayout>

</LinearLayout>