<LinearLayout android:id="@+id/llWidgetLayout" 
xmlns:android="http://schemas.android.com/apk/res/android" 
android:orientation="vertical" 
android:layout_height="wrap_content" 
android:layout_width="wrap_content">


<!-- widget default layout -->
<LinearLayout android:id="@+id/llWidgetDefaultLayout" 
android:orientation="vertical" 
android:layout_width="wrap_content" android:layout_height="wrap_content" android:visibility="gone">

<ImageView android:id="@+id/ivWidgetAlbumArt" 
android:src="@drawable/pandoraicon" 
android:layout_gravity="center_horizontal" 
android:scaleType="fitXY" 
android:layout_height="wrap_content" android:layout_width="wrap_content">
</ImageView>

<ImageView android:id="@+id/ivWidgetLogo" 
android:layout_height="wrap_content" 
android:src="@drawable/pandora_station_logo" 
android:layout_gravity="center_horizontal" 
android:layout_marginTop="10dip" 
android:scaleType="fitXY" android:layout_width="90dp">
</ImageView>

</LinearLayout>


<!-- widget playnow layout -->
<LinearLayout android:id="@+id/llWidgetPlayNowLayout" 
android:orientation="horizontal" 
android:layout_width="wrap_content" android:layout_height="wrap_content">

<ImageView android:id="@+id/ivWidgetPlayNowLogo" 
android:src="@drawable/icon_pandora" 
android:layout_marginLeft="5dip" 
android:layout_height="30dip" 
android:layout_width="30dip" 
android:scaleType="fitXY" android:visibility="gone">
</ImageView>

<LinearLayout android:layout_width="wrap_content" 
android:id="@+id/llWidgetPlayNowTrack" 
android:orientation="vertical" 
android:layout_gravity="center_horizontal" 
android:layout_height="wrap_content">

<TextView 
android:id="@+id/tvWidgetPlayNowStationName" 
android:textColor="@color/White" 
android:textColorHighlight="@color/White" 
android:layout_gravity="left" 
android:layout_marginLeft="5dip" 
android:text="@string/pandora" 
android:singleLine="true" android:layout_width="90dip" android:textSize="14sp" android:layout_height="30dp" android:gravity="center_vertical"/>

<ImageView android:src="@drawable/pandoraicon" 
android:id="@+id/ivWidgetPlayNowAlbumArt" 
android:scaleType="fitXY" 
android:layout_gravity="center_horizontal" 
android:layout_height="wrap_content" android:layout_width="wrap_content">
</ImageView>

</LinearLayout>

<LinearLayout android:id="@+id/llWidgetPlayNowTrackInfo" 
android:orientation="vertical" 
android:layout_width="wrap_content" 
android:layout_height="wrap_content" 
android:layout_gravity="bottom" android:layout_marginLeft="3dp">

<TextView 
android:layout_height="wrap_content" 
android:textSize="14sp" 
android:layout_marginTop="5dip" 
android:id="@+id/tvWidgetPlayNowArtist" 
android:gravity="left" 
android:layout_gravity="left" 
android:text="@string/pandora" 
android:singleLine="true" android:textColor="@color/Gray_White" android:textColorHighlight="@color/Gray_White" android:layout_width="90dip"/>

<TextView 
android:id="@+id/tvWidgetPlayNowSongName" 
android:textColor="@color/White" 
android:textColorHighlight="@color/White" 
android:layout_height="wrap_content" 
android:layout_gravity="left" 
android:text="@string/pandora" 
android:singleLine="true" android:textSize="16sp" android:layout_width="90dip"/>

<TextView 
android:layout_height="wrap_content" 
android:id="@+id/tvWidgetPlayNowAlbumName" 
android:textSize="14sp" 
android:layout_marginTop="3sp" 
android:layout_gravity="left" 
android:text="@string/pandora" 
android:singleLine="true" android:textColorHighlight="@color/Gray_White" android:textColor="@color/Gray_White" android:layout_width="90dip"/>

</LinearLayout>

</LinearLayout>


</LinearLayout>
