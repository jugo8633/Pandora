<RelativeLayout android:id="@+id/rlPandoraHeader"
xmlns:android="http://schemas.android.com/apk/res/android" 
android:layout_width="fill_parent"
android:layout_height="wrap_content" 
android:background="@drawable/pandora_header">

<TextView android:id="@+id/tvPandoraHeaderBack" 
android:layout_width="wrap_content" 
android:layout_height="wrap_content" 
android:textColor="@color/White" 
android:textColorHighlight="@color/White" 
android:background="@drawable/btn_header" 
android:layout_alignParentLeft="true" 
android:text="@string/pandora" 
android:gravity="right|fill_vertical" 
android:paddingRight="10dip" 
android:layout_marginTop="10dip" 
android:textSize="14sp"/>

<frame.view.MarqueeTextView 
android:id="@+id/tvPandoraHeaderTitle" 
android:layout_height="40dip" 
android:text="@string/pandora" 
android:textColor="@color/White" 
android:textColorHighlight="@color/White"
android:textSize="18sp"
android:gravity="center_vertical" 
android:layout_marginLeft="130dip" 
android:layout_marginTop="5dip" android:layout_width="250dip"/>

<TextView 
android:id="@+id/tvPandoraHeaderLogout"
android:layout_width="wrap_content" 
android:gravity="center" 
android:layout_alignParentRight="true" 
android:layout_height="35dip" 
android:layout_marginTop="7dip" 
android:layout_marginRight="15dip" 
android:background="@drawable/btn_logout" 
android:text="@string/logout" 
android:textColor="@color/White" 
android:textColorHighlight="@color/White" 
android:textStyle="bold" 
android:textSize="16sp"/>

</RelativeLayout>