<RelativeLayout android:id="@+id/rlPandoraHeader"
xmlns:android="http://schemas.android.com/apk/res/android" 
android:layout_width="fill_parent"
android:layout_height="wrap_content" 
android:background="@drawable/pandora_header">

<TextView android:id="@+id/tvPandoraHeaderTitle" 
android:layout_width="wrap_content" 
android:gravity="center" 
android:layout_marginLeft="20dip" 
android:textSize="18sp" 
android:focusable="false" 
android:focusableInTouchMode="false" 
android:textColor="@color/White" 
android:textColorHighlight="@color/White" 
android:text="@string/pandora" 
android:layout_height="50dip" 
android:visibility="gone"/>

<ImageView 
android:layout_height="wrap_content" 
android:layout_width="wrap_content" 
android:id="@+id/ivPandoraHeaderTitle" 
android:layout_marginLeft="20dip" 
android:src="@drawable/pandora_station_logo" 
android:layout_marginTop="5dip"/>

<TextView 
android:id="@+id/tvPandoraHeaderLogout"
android:layout_width="wrap_content" 
android:gravity="center" 
android:layout_alignParentRight="true" 
android:layout_height="35dip" 
android:layout_marginTop="7dip" 
android:layout_marginRight="15dip" 
android:background="@drawable/btn_logout" 
android:text="@string/logout" 
android:textColor="@color/White" 
android:textColorHighlight="@color/White" 
android:textStyle="bold" 
android:textSize="16sp"/>


</RelativeLayout>