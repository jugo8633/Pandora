<RelativeLayout 
android:id="@+id/rlPlaynowFootbarMain" 
xmlns:android="http://schemas.android.com/apk/res/android" 
android:layout_width="fill_parent" 
android:layout_height="fill_parent">

<RelativeLayout 
android:id="@+id/rlPlaynowFootbar" 
android:layout_width="fill_parent" 
android:layout_height="fill_parent" 
android:gravity="center_horizontal">

<RelativeLayout android:layout_height="fill_parent" android:id="@+id/rlPlnFootPause" android:layout_width="95dip" android:paddingTop="30dp">

<ImageView android:scaleType="fitXY" 
android:layout_height="30dip" 
android:layout_width="30dip" 
android:src="@drawable/pandora_pln_pause" 
android:id="@+id/ivPlnPause" android:layout_centerHorizontal="true"/>


<TextView android:layout_height="wrap_content" 
android:layout_width="wrap_content" 
android:id="@+id/tvPlnPause" 
android:textColor="@color/White" 
android:textColorHighlight="@color/White" 
android:text="@string/pause" android:gravity="center" android:layout_centerHorizontal="true" android:layout_below="@+id/ivPlnPause"/>


</RelativeLayout>

<RelativeLayout android:layout_height="fill_parent" android:id="@+id/rlPlnFootThumbUp" android:layout_toRightOf="@+id/rlPlnFootPause" android:layout_width="95dip" android:paddingTop="30dp">

<ImageView android:scaleType="fitXY" 
android:layout_height="30dip" 
android:layout_width="30dip" 
android:src="@drawable/pandora_pln_thumbup" 
android:id="@+id/ivPlnThumbUp" android:layout_centerHorizontal="true"/>


<TextView android:layout_height="wrap_content" 
android:layout_width="wrap_content" 
android:id="@+id/tvPlnThumbUp" 
android:textColorHighlight="@color/White" 
android:textColor="@color/White" 
android:text="@string/thumb_up" android:gravity="center" android:layout_centerHorizontal="true" android:layout_below="@+id/ivPlnThumbUp"/>

</RelativeLayout>

<RelativeLayout android:orientation="vertical"
android:layout_height="fill_parent" android:id="@+id/rlPlnFootThumbDown" android:layout_toRightOf="@+id/rlPlnFootThumbUp" android:layout_width="95dip" android:paddingTop="30dp">

<ImageView android:scaleType="fitXY" 
android:layout_height="30dip" 
android:layout_width="30dip" 
android:src="@drawable/pandora_pln_thumbdown" 
android:id="@+id/ivPlnThumbDown" android:layout_centerHorizontal="true"/>

<TextView android:layout_height="wrap_content" 
android:layout_width="wrap_content" 
android:id="@+id/tvPlnThumbDown" 
android:textColor="@color/White" 
android:textColorHighlight="@color/White" 
android:text="@string/thumb_down" android:layout_centerHorizontal="true" android:layout_below="@+id/ivPlnThumbDown" android:gravity="center"/>

</RelativeLayout>

<RelativeLayout android:orientation="vertical"
android:layout_height="fill_parent" android:id="@+id/rlPlnFootNextSong" android:layout_toRightOf="@+id/rlPlnFootThumbDown" android:layout_width="95dip" android:paddingTop="30dp">

<ImageView android:scaleType="fitXY" 
android:layout_height="30dip" 
android:layout_width="30dip" 
android:src="@drawable/pandora_pln_next_song" 
android:id="@+id/ivPlnNextSong" android:layout_centerHorizontal="true"/>


<TextView android:layout_height="wrap_content" 
android:layout_width="wrap_content" 
android:id="@+id/tvPlnNextSong" 
android:textColorHighlight="@color/White" 
android:textColor="@color/White" 
android:text="@string/next_song" android:layout_centerHorizontal="true" android:layout_below="@+id/ivPlnNextSong" android:gravity="center"/>

</RelativeLayout>

<RelativeLayout android:orientation="vertical"
android:layout_height="fill_parent" android:id="@+id/rlPlnFootMenu" android:layout_toRightOf="@+id/rlPlnFootNextSong" android:layout_width="95dip" android:paddingTop="30dp">

<ImageView android:scaleType="fitXY" 
android:layout_height="30dip" 
android:layout_width="30dip" 
android:src="@drawable/pandora_pln_menu" 
android:id="@+id/ivPlnMenu" android:layout_centerHorizontal="true"/>

<TextView android:layout_height="wrap_content" 
android:layout_width="wrap_content" 
android:id="@+id/tvPlnMenu" 
android:textColor="@color/White" 
android:textColorHighlight="@color/White" 
android:text="@string/menu" android:layout_below="@+id/ivPlnMenu" android:layout_centerHorizontal="true" android:gravity="center"/>

</RelativeLayout>

</RelativeLayout>

</RelativeLayout>
