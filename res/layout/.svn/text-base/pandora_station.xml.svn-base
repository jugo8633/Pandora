<RelativeLayout 
android:id="@+id/rlStationMain" 
android:layout_width="fill_parent" 
android:layout_height="fill_parent" 
xmlns:android="http://schemas.android.com/apk/res/android" 
android:background="@color/Black_Gray">

<TextView 
android:layout_height="wrap_content" 
android:layout_width="fill_parent" 
android:textColor="@color/White" 
android:textColorHighlight="@color/White" 
android:textSize="16sp" 
android:paddingLeft="20dp" 
android:paddingBottom="5dp" 
android:id="@+id/tvStationInfo" 
android:paddingTop="5dp" 
android:background="@color/Black"/>

<ImageView 
android:layout_below="@+id/tvStationInfo" 
android:layout_height="wrap_content" 
android:id="@+id/ivLine" 
android:src="@drawable/h_line800" 
android:layout_width="fill_parent"/>

<ListView android:id="@+id/lvStation" 
android:layout_width="fill_parent" 
android:layout_height="fill_parent" 
android:isScrollContainer="true" 
android:choiceMode="singleChoice" 
android:scrollbarThumbVertical="@drawable/scrolling_bar_focus_v" 
android:scrollbarTrackVertical="@drawable/scrolling_bar_v" 
android:layout_below="@+id/ivLine" 
android:background="@color/List_BG"/>

</RelativeLayout>
