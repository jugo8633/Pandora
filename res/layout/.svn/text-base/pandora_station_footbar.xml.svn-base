<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout 
android:id="@+id/rlStationFootbarMain" 
xmlns:android="http://schemas.android.com/apk/res/android" 
android:layout_width="fill_parent" 
android:layout_height="fill_parent">

<RelativeLayout 
android:id="@+id/rlStationFootbar" 
android:layout_width="fill_parent" 
android:layout_height="fill_parent" 
android:gravity="center_horizontal">

<!-- create station -->
<RelativeLayout 
android:layout_width="107dip"
android:layout_height="fill_parent" 
android:id="@+id/ryStaCreateStation" 
android:paddingTop="30dp">

<ImageView 
android:id="@+id/ivStaCreateStation"
android:scaleType="fitXY" 
android:layout_height="30dip" 
android:layout_width="30dip" 
android:src="@drawable/pandora_sta_add" 
android:layout_centerHorizontal="true"/>

<TextView android:id="@+id/tvStaCreateStation" 
android:layout_height="wrap_content" 
android:layout_width="wrap_content" 
android:gravity="center_vertical|center_horizontal" 
android:text="@string/create_station" 
android:textColor="@color/White" 
android:textColorHighlight="@color/White" 
android:layout_below="@+id/ivStaCreateStation" 
android:layout_centerHorizontal="true"/>
</RelativeLayout>


<!-- remove station -->
<RelativeLayout 
android:layout_width="107dip"
android:layout_height="fill_parent" 
android:id="@+id/ryStaRemoveStation" 
android:layout_toRightOf="@+id/ryStaCreateStation" 
android:layout_marginLeft="40sp" 
android:paddingTop="30dp">
<ImageView 
android:id="@+id/ivStaRemoveStation"
android:scaleType="fitXY" 
android:layout_height="30dip" 
android:layout_width="30dip" 
android:src="@drawable/pandora_sta_remove" 
android:layout_centerHorizontal="true"/>

<TextView 
android:id="@+id/tvStaRemoveStation" 
android:focusable="false" 
android:focusableInTouchMode="false" 
android:layout_height="wrap_content" 
android:layout_width="wrap_content" 
android:gravity="center_vertical|center_horizontal" 
android:layout_gravity="bottom|center_horizontal" 
android:text="@string/remove_station" 
android:textColor="@color/White" 
android:textColorHighlight="@color/White" 
android:layout_below="@+id/ivStaRemoveStation" 
android:layout_centerHorizontal="true"/>
</RelativeLayout>


<!-- switch user -->
<RelativeLayout 
android:orientation="vertical"
android:layout_width="107dip"
android:layout_height="fill_parent" 
android:id="@+id/ryStaSwitchUser" 
android:layout_toRightOf="@+id/ryStaRemoveStation" 
android:layout_marginLeft="40sp" 
android:paddingTop="30dp">

<ImageView 
android:id="@+id/ivStaSwitchUser"
android:scaleType="fitXY" 
android:layout_height="30dip" 
android:layout_width="30dip" 
android:src="@drawable/pandora_sta_switch" 
android:layout_centerHorizontal="true"/>

<TextView 
android:id="@+id/tvStaSwitchUser" 
android:layout_height="wrap_content" 
android:layout_width="wrap_content" 
android:gravity="center_vertical|center_horizontal" 
android:layout_gravity="bottom|center_horizontal" 
android:text="@string/switch_user" 
android:textColor="@color/White" 
android:textColorHighlight="@color/White" 
android:layout_below="@+id/ivStaSwitchUser" 
android:layout_centerHorizontal="true"/>

</RelativeLayout>
</RelativeLayout>

<!-- flipper menu, remove check button -->
<frame.view.MenuList
android:id="@+id/menuListFootbarChk" 
android:layout_height="wrap_content"
android:layout_width="wrap_content"
android:layout_alignParentBottom="true" />

</RelativeLayout>

