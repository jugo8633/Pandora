
<RelativeLayout 
android:id="@+id/ryUsersMain"
android:layout_height="fill_parent" 
xmlns:android="http://schemas.android.com/apk/res/android" 
android:gravity="fill_horizontal" 
android:layout_gravity="center_horizontal" 
android:layout_width="fill_parent" 
android:background="@color/Black">

<ListView android:id="@+id/lvUsersList" 
android:layout_height="fill_parent" 
android:isScrollContainer="true" 
android:choiceMode="singleChoice" 
android:smoothScrollbar="true" 
android:scrollbarThumbVertical="@drawable/scrolling_bar_focus_v" 
android:scrollbarTrackVertical="@drawable/scrolling_bar_v" 
android:layout_width="fill_parent" 
android:paddingLeft="20dp" 
android:paddingRight="20dp" android:background="@color/List_BG">
</ListView>

</RelativeLayout>





